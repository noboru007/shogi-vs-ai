{
    "hosting": {
        "public": "static",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "function": "shogi_api"
            }
        ]
    },
    "functions": {
        "source": "functions",
        "codebase": "default",
        "ignore": [
            "venv",
            ".git",
            "firebase-debug.log",
            "firebase-debug.log.*"
        ],
        "runtime": "python311"
    }
}